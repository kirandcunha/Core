<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0"
	id="com.krn.core" version="1.0">

	<name>Core</name>

	<description>
		Core for any App
	</description>

	<author>
		Kiran D'Cunha
	</author>

	<preference name="permissions" value="none" />

	<gap:splash src="res/Splash/splash.png" gap:platform="android" />
	<preference name="SplashScreenDelay" value="2000" />

	<icon src="res/ldpi/ic_launcher.png" gap:platform="android"
		gap:qualifier="ldpi" />
	<icon src="res/mdpi/ic_launcher.png" gap:platform="android"
		gap:qualifier="mdpi" />
	<icon src="res/hdpi/ic_launcher.png" gap:platform="android"
		gap:qualifier="hdpi" />
	<icon src="res/xhdpi/ic_launcher.png" gap:platform="android"
		gap:qualifier="xhdpi" />
	<icon src="res/xxhdpi/ic_launcher.png" gap:platform="android"
		gap:qualifier="xxhdpi" />

</widget>